<header class='top-page-header'>
  <div class='nav'>
    <div class="lists-left">
      <%= link_to image_tag("secondheader_logo.png", class:"heap-icon"), "/" %>
    </div>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li class="user-nickname background-red" id="lists"><%= current_user.nickname%>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-caret-down-square-fill" viewBox="0 0 16 16">
          <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm4 4a.5.5 0 0 0-.374.832l4 4.5a.5.5 0 0 0 .748 0l4-4.5A.5.5 0 0 0 12 6H4z"/>
        </svg>
        </li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <%end%>
      
      <ul class="show-lists hidden" id="pull-down">
        <li class="pull-down-list"><%= link_to "マイページ", user_path(current_user.id)%></li>
        <li class="pull-down-list"><%= link_to "フォロー中", user_follows_path(current_user.id)%></li>
        <li class="pull-down-list"><%= link_to "フォロワー", user_followers_path(current_user.id)%></li>
        <li class="pull-down-list"><%= link_to "閲覧作品一覧", user_items_path(current_user.id)%></li>
        <li class="pull-down-list"><%= link_to "気になる一覧", user_likes_path(current_user.id)%></li>
      </ul>
    </ul>
  </div>
</header>